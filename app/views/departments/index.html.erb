<p id="notice"><%= notice %></p>

<div class="title-container">
  <button class="botonCrear waves-effect waves-light btn"><%= link_to 'Nuevo', new_department_path %></button>
  <h3>Departamentos</h3>

</div>

<div class="row">
  <div class="col s12 m8 departmentColumn">
    <%= grid(@departments_grid) do |g|
      buffer='<div class="card departmentDetail">'
      raw buffer
        g.column name: 'Departamento', attribute: 'departmentName'
        g.column do |department|
          link_to('Edit', edit_department_path(department))
        end
        g.column do |department|
          link_to 'Eliminar', department, method: :delete, data: { confirm: 'Esta seguro?' }
        end
      buffer='</div>'
      raw buffer
    end -%>
</div>


<br>


